<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_margin="15dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/weather_image_view"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temp_text_view"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="120dp"
        android:textStyle="bold"
        android:textSize="50dp"
        android:text="+20"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginLeft="5dp"
        android:text="Влажность "
        android:id="@+id/humidity_text_view"
        android:layout_alignTop="@+id/temp_text_view"
        android:layout_toRightOf="@+id/temp_text_view"
        android:layout_toEndOf="@+id/temp_text_view" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:text="Ветер "
        android:id="@+id/wind_text_view"
        android:layout_below="@+id/humidity_text_view"
        android:layout_alignLeft="@+id/humidity_text_view"
        android:layout_alignStart="@+id/humidity_text_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Description"
        android:id="@+id/deskription_text_view"
        android:layout_below="@+id/temp_text_view"
        android:layout_alignLeft="@+id/temp_text_view"
        android:layout_alignStart="@+id/temp_text_view" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:text="Давление "
        android:id="@+id/pressure_text_view"
        android:layout_below="@+id/wind_text_view"
        android:layout_alignLeft="@+id/wind_text_view"
        android:layout_alignStart="@+id/wind_text_view" />

</RelativeLayout>